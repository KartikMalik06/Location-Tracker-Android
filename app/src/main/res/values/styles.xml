<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/light_grey</item>
    </style>
    <style name="navStyle">
        <item name="android:itemTextAppearance">@android:color/white</item>

    </style>
    <style name="SplashStyle" parent="AppThemeNoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="DashboarStyle" parent="AppThemeNoActionBar">
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>

    <style name="toolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>
    <style name="edittext" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:colorAccent">@color/light_grey</item>
        <item name="android:colorPrimary">@color/light_grey</item>
        <item name="android:colorControlNormal">@color/light_grey</item>
        <item name="android:colorControlActivated">@color/light_grey</item>
    </style>
    <style name="report_item_head_style" parent="report_item_style">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="report_item_style">
        <item name="android:textSize">@dimen/text_size_x_small</item>
        <item name="android:textColorHint">@color/md_black_1000</item>
        <item name="android:background">@drawable/black_border</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>
</resources>
