<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_300"
>

    <TextView
            android:id="@+id/tv_s_no"
            style="@style/report_item_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/black_border"
            android:gravity="center"
            android:padding="@dimen/size_3"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bssid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.12"/>

    <TextView
            android:id="@+id/tv_ssid"
            style="@style/report_item_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/black_border"
            android:gravity="center"
            android:padding="@dimen/size_3"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bssid"
            app:layout_constraintLeft_toRightOf="@+id/tv_s_no"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintWidth_percent="0.23"/>

    <TextView
            android:id="@+id/tv_bssid"
            style="@style/report_item_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/size_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_min="40dp"
            android:minHeight="30dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_ssid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.3"/>

    <TextView
            android:id="@+id/tv_time"
            style="@style/report_item_style"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/black_border"
            android:gravity="center"
            android:padding="@dimen/size_3"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bssid"
            app:layout_constraintLeft_toRightOf="@+id/tv_bssid"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35"/>

</androidx.constraintlayout.widget.ConstraintLayout>